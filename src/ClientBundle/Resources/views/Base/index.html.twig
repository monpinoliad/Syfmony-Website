<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {% block metatags %}
    {% endblock metatags %}
    <title>Sholomon Pinoliad - {% block title %}{% endblock title %}</title>
    {% block stylesheets %}
        {% stylesheets filter="scssphp" output="css/main.css"
            "bundles/client/scss/main.scss"
        %}
            <link rel="stylesheet" href="{{ asset_url }}" />
        {% endstylesheets %}
    {% endblock stylesheets %}
</head>
<body>
    {% include '@Client/Components/navbar.html.twig' %}
    {% block body %}
    {% endblock body %}
    {% block javascripts %}
        <script type="text/javascript" src="https://alexfox.dev/laxxx/lib/lax.min.js"></script>
        <script type="text/javascript">
            window.onload = function() {
                lax.setup()

                const update = () => {
                    lax.update(window.scrollY)
                    window.requestAnimationFrame(update)
                }

                window.requestAnimationFrame(update)

                let w = window.innerWidth
                window.addEventListener("resize", function() {
                    if(w !== window.innerWidth) {
                        lax.updateElements()
                    }
                });
            }
        </script>
    {% endblock javascripts %}
</body>
</html>
